{
  "name": "willa-api",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Ali Zahid",
    "email": "ali.zahid@live.com",
    "url": "https://alizahid.dev"
  },
  "scripts": {
    "build": "tsc",
    "dev": "env-cmd ts-node-dev --files --ignore-watch node_modules --respawn --no-notify src/index.ts",
    "dev:prisma": "env-cmd prisma",
    "dev:prisma:generate": "yarn dev:prisma generate; echo 'export * from \"./enums\";\nexport * from \"./models\";' > src/types/type-graphql/index.ts",
    "dev:prisma:migrate:save": "yarn dev:prisma migrate save --experimental",
    "dev:prisma:migrate:up": "yarn dev:prisma migrate up --experimental",
    "lint": "eslint src --ext ts",
    "postinstall": "yarn dev:prisma:generate",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@prisma/client": "^2.3.0",
    "apollo-server": "^2.16.0",
    "bcrypt": "^5.0.0",
    "class-validator": "^0.12.2",
    "firebase-admin": "^9.0.0",
    "graphql": "14.6.0",
    "graphql-type-json": "^0.3.2",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.27.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "0.17.6",
    "typedi": "^0.8.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.3.0",
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.158",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "husky": "^4.2.5",
    "lodash": "^4.17.19",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-node-dev": "^1.0.0-pre.56",
    "typegraphql-prisma": "^0.4.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
